{
  "manifest_version": 2,
  "name": "Clarkesreader",
  "version": "1.0.6",

  "description": "Downloads issues of Clarkesworld as epub files",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["https://clarkesworldmagazine.com/*"],
      "js": ["index.js"]
    }
  ],
  "web_accessible_resources": ["resources/*.css"]
}
